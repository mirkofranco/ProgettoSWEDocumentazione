%-------------------INIZIO stile intestazioni e piè di pagina -----------------------------------------
\newcommand{\intestazioni}[1]{
	\fancypagestyle{myfront}{
		\hypersetup{
			colorlinks=true,
			linkcolor=black,
		}
		\pagenumbering{Roman}
		\fancyhf{}
		\lhead{#1}
		\rhead{\nouppercase{\leftmark}}
		\rfoot{\thepage~di \pageref{LastFrontPage}}
		\renewcommand{\headrulewidth}{0.4pt}
		\renewcommand{\footrulewidth}{0.4pt}
	}
	
	
	\fancypagestyle{mymain}{
		\hypersetup{
			colorlinks=true,
			linkcolor=black,
			anchorcolor=black,
			citecolor=black,
			urlcolor=blue,
		}
		\pagenumbering{arabic}
		\fancyhf{}
		\lhead{#1}
		\rhead{\nouppercase{\leftmark}}
		\rfoot{
			\hypersetup{
				colorlinks=true,
				linkcolor=black,
			}
			\thepage~di \pageref{LastPage}
		}
		\lfoot{\pianodiqualifica}
		\renewcommand{\headrulewidth}{0.4pt}
		\renewcommand{\footrulewidth}{0.4pt}
	}
	
}
